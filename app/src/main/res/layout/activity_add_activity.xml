<?xml version="1.0" encoding="utf-8"?>
<com.example.test.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:left_btn_visible="true"
    app:left_btn_src="@mipmap/icon_back"
    app:title_visible="true"
    app:title_text="添加活动"
    tools:context="com.example.test.AddActivityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="活动标题"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/activity_title_Et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="未设置" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D8DDE1"
        android:orientation="horizontal">

        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="活动具体描述："/>

    </LinearLayout>

    <EditText
        android:id="@+id/activity_description_Et"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:hint="请输入活动具体描述"
        android:gravity="start"
        android:layout_marginBottom="10dp"
        android:lineSpacingExtra="5dp"
        android:scrollbars="vertical"/>

    <View
        android:layout_width="match_parent"
        android:background="#D8DDE1"
        android:layout_height="20dp"/>

    <LinearLayout
        android:id="@+id/deadline_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="选择截止日期"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/deadline_date_Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="未设置" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#D8DDE1"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/deadline_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="选择截止时间"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/deadline_time_Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="未设置" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#D8DDE1"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/experience_score_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="活动经验值"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/experience_score_Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="未设置" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="#D8DDE1"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/create_activity_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#32A082"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:text="创 建 活 动"/>

</com.example.test.CustomToolBar>